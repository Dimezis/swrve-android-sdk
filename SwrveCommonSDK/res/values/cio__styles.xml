<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="cio__control_button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/cio__green_button_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="cio__second_button" parent="@style/cio__control_button">
        <item name="android:background">@drawable/cio__green_button_bg</item>
    </style>

    <style name="cio__first_button" parent="@style/cio__control_button">
        <item name="android:background">@drawable/cio__red_button_bg</item>
    </style>

    <style name="cio__third_button" parent="@style/cio__control_button">
        <item name="android:background">@drawable/cio__blue_button_bg</item>
    </style>

    <style name="cio__button_tray">
        <item name="android:layout_marginTop">5dp</item>
        <!-- sometimes these dont work but lets try -->
        <item name="android:background">@drawable/cio__button_tray_background</item>
    </style>

    <style name="cio__conversation_content_box">
        <item name="android:background">@drawable/cio__clip_layer_1_bg</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="cio__talkback_style_op" parent="@style/cio__content_textview">
        <item name="android:background">@drawable/cio__grey_pill</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="cio__talkback_style_sub" parent="@style/cio__content_textview">
        <item name="android:background">@drawable/cio__orange_pill</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="cio__talkback_timestamp" parent="@android:style/Widget.TextView">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#FF888888</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="cio__content_textview" parent="@android:style/Widget.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="cio__content_bold_textview" parent="@style/cio__content_textview">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cio__list_help_text" parent="cio__content_textview">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FF666666</item>
    </style>

    <style name="cio__edit_box" parent="@android:style/Widget.EditText">

        <!-- Any changes to the editText Style should go here -->
        <item name="android:gravity">top</item>
        <item name="android:padding">6dp</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="cio__inbox_list" parent="@android:style/Widget.ListView"></style>

    <style name="cio__inbox_row"></style>

    <style name="cio__inbox_row_header" parent="@style/cio__content_textview"></style>

    <style name="cio__inbox_row_date" parent="@style/cio__content_textview"></style>

    <style name="cio__mv_item" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="cio__np_displayCell">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="cio__mv_description_item" parent="@style/cio__content_textview">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="cio__description_item" parent="@style/cio__content_textview">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">10pt</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#FF333333</item>
    </style>

</resources>