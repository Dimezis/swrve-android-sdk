<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BaseConverser" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="Theme.Converser" parent="@style/Theme.BaseConverser">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/cio__window_background</item> <!-- Note that the window background affects the control trays border -->
        <item name="conversationControlTrayStyle">@style/cio__button_tray</item>
        <item name="conversationControlTrayTopMargin">@dimen/control_tray_top_margin</item>
        <item name="conversationControlLayoutMargin">@dimen/control_tray_item_margin</item>

        <item name="conversationControlButtonStyle">@style/cio__control_button</item>
        <item name="conversationControlPrimaryButtonStyle">@style/cio__primary_button</item>
        <item name="conversationControlSecondaryButtonStyle">@style/cio__secondary_button</item>
        <item name="conversationControlNeutralButtonStyle">@style/cio__neutral_button</item>

        <item name="conversationContentStyle">@style/cio__conversation_content_box</item>
        <item name="conversationContentDescriptionStyle">@style/cio__description_item</item>

        <item name="conversationInputTextBoxDefaultStyle">@style/cio__edit_box</item>

        <item name="conversationTextContentDefaultStyle">@style/cio__content_textview</item>
        <item name="conversationTextContentDefaultBoldStyle">@style/cio__content_bold_textview</item>

        <item name="conversationInputMultiValueItemStyle">@style/cio__mv_item</item>
        <item name="conversationInputMultiValueDescriptionStyle">@style/cio__mv_description_item</item>

        <item name="conversationMVSpinner">@style/cio__mvl_spinner</item>

    </style>

    <style name="Theme.Converser.NoTitleBar" parent="Theme.Converser">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>