<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/piuiogb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/cio__lv_inbox"
        style="?conversationListViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"></ListView>

    <TextView
        android:id="@+id/cio__tvHelpText"
        style="?conversationListHelpTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/cio__listHelpText"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/cio__inbox_empty_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            style="?conversationTextContentDefaultStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="?conversationListDecorIcon"
            android:text="@string/cio__no_conversations" />
    </LinearLayout>

</LinearLayout>