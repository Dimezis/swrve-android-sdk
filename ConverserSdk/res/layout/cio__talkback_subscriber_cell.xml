<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cio__talkbackMessage"
        style="?conversationTalkbackSubscriberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="?conversationTalkbackSubscriberMarginLeft"
        android:layout_marginRight="?conversationTalkbackSubscriberMarginRight"
        android:layout_marginTop="?conversationTalkbackSubscriberMarginTop" />

    <TextView
        android:id="@+id/cio__talkbackTimestamp"
        style="?conversationTalkbackTimeStampStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="10dp" />

</LinearLayout>
